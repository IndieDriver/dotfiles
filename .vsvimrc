execute pathogen#infect()

set vsvim_useeditordefaults
syntax enable
set termguicolors
colorscheme solarized

set nu
set autoindent
set cindent
set smartcase
set smartindent

set backspace=indent,eol,start
set shiftwidth=4
set tabstop=4

set visualbell
set noerrorbells
imap jk <ESC>
set hlsearch
set incsearch
set ignorecase

set wildmenu
set wildmode=longest,list

com! FormatJSON %!python -m json.tool

map <up> <nop>
map <down> <nop>
map <left> <nop>
map <right> <nop>

imap <up> <nop>
imap <down> <nop>
imap <left> <nop>
imap <right> <nop>
